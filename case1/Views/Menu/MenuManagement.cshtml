@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>菜单维护页面</title>
    <link href="~/Content/layui.css" rel="stylesheet" />
    <link href="~/Content/zTreeStyle.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.ztree.core.min.js"></script>
    <script src="~/Scripts/layui.all.js"></script>
    <style>
        body {
            margin-left: 0px;
            margin-top: 0px;
            margin-right: 0px;
            margin-bottom: 0px;
            position: relative;
        }
        .layui-layout-admin .layui-body {
            bottom: 0;
        }

        .shuxing {
            overflow-x: hidden;
            overflow-y: scroll;
        }

            .shuxing::-webkit-scrollbar {
                display: none;
            }

        .layui-header {
            position: fixed;
        }
        .layui-btn{
            margin-left:20px;
        }
        #add:hover{
            text-shadow:0px 1px 3px rgba(0,0,0,0.6);
        }
  /*定义滚动条高宽及背景 高宽分别对应横竖滚动条的尺寸*/ 
::-webkit-scrollbar 
{ 
    width: 0px; 
    height: 0px; 
    background-color: rgba(0,0,0,0.3); 
   
} 
    </style>
</head>
<body>
    <input type="hidden" id="erro" value="@ViewData["erro"]" />
    <a href="javascript:void(0)" target="content" id="update" style="display:none;"></a>
    <div class="layui-layout layui-layout-admin">

        <div class="layui-header " style="height:42px; width:100%; background:#fff;padding-top:10px;">
            <a href="/Dept/AddDept" target="content" class="layui-btn layui-btn-normal" id="add" title="新增">新增</a>
            <button class="layui-btn layui-btn-danger" id="delete" title="删除">删除</button>
        </div>

        <div class="layui-side layui-side-scroll" style="width:25%;">
            <div class="shuxing">
                <ul id="treeDemo" class="ztree"></ul>
            </div>
        </div>

        <div class="layui-body" style="width:75%;height:auto;">
            <iframe name="content" width="100%" height="90%" frameborder="0" scrolling="auto"></iframe>
        </div>

    </div>

    <script>
        if ($("#erro").val() != "") {
            alert($("#erro").val());
            window.location.reload();
            $("#add")[0].click();
        }
                var zTreeObj;
                //配置树的样式
                var setting = {
                    view: {
                        dblClickExpand: true,//双击节点时，是否自动展开父节点的标识
                        showLine: true,//是否显示节点之间的连线
                        fontCss: { 'color': 'black', 'font-weight': '300', 'font-size': '14px' },//字体样式函数
                        selectedMulti: true //设置是否允许同时选中多个节点
                    },
                    check: {
                        chkboxType: { "Y": "", "N": "" },
                        chkStyle: "checkbox",//复选框类型
                        enable: true //每个节点上是否显示 CheckBox
                    },
                    edit: {
                        enable: true,
                        editNameSelectAll: true,
                        showRemoveBtn: true,
                        showRenameBtn: true,
                        removeTitle: "remove",
                        renameTitle: "rename"
                    },
                    data: {
                        key: {
                            name: "name"
                        },
                        simpleData: {//简单数据模式
                            enable: true,
                            idKey: "id",
                            pIdKey: "IPARENTID",
                            rootPId: null
                        }
                    },
                    callback: {
                        onClick: zTreeOnClick
                    }
                };
        //ajax请求生成树
                var username = $(window.parent.document).find("#username").val();
                    $.ajax({
                        url: "/Menu/getMenuTree?username=" + username ,
                        dateType: "json",
                        type: "POST",
                        success: function (data) {
                            //调用layui.tree方法
                            $(document).ready(function () {
                                zTreeObj = $.fn.zTree.init($("#treeDemo"), setting, data);
                            });
                        }
                    });

                    //var nodeId;
                //点击树的节点时要处理的方法
                    function zTreeOnClick(event, treeId, treeNode) {
                         //nodeId = treeNode.id;
                         $("#treeDemo li a").attr('href', '/Menu/MenuContent?id=' + treeNode.id);
                    
                    }
                 //点击删除按钮
                    $("#delete").click(function () {
                        var result = confirm("您确定要删除吗？");
                        //返回ture或false
                        if (result) {

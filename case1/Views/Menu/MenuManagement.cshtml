                            $.post(url, param, function (date) {
                                if (date == 1) {
                                    alert("删除成功");
                                    location.reload();
                                } else {
                                    alert("删除失败")
                                }
                            })
                        }
                    });
        //点击新增按钮


    </script>
</body>
</html>

@{ 
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>主页</title>
    <link href="~/Content/layui.css" rel="stylesheet" />
    <link href="~/Content/zTreeStyle.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.ztree.core.min.js"></script>
    <style>
    
        * {
            margin: 0;
            padding: 0;
        }

        .zuoce {
            background: #2F4056;
            font-size:15px;
            letter-spacing:2px;
        }
        .zuoce dd{text-align:center;}
        .layui-layout-admin .layui-body{bottom:0}
    </style>
</head>
<body>
    <input type="hidden" value="@ViewData["username"]" id="username"/><!--隐藏标签，用户子页面获取登录的用户名-->
    <div class="layui-layout  layui-layout-admin">
        <div class="layui-header layui-bg-blue">
            <div class="layui-logo layui-bg-black">在中联的第一个例子</div>
            <!-- 头部区域（可配合layui已有的水平导航） -->
            <ul class="layui-nav layui-layout-left">
                <li class="layui-nav-item"><a href="javaScript:void(0);">控制一</a></li>
                <li class="layui-nav-item"><a href="javaScript:void(0);">控制二</a></li>
                <li class="layui-nav-item"><a href="javaScript:void(0);">控制三</a></li>
            </ul>
            <ul class="layui-nav layui-layout-right">
                <li class="layui-nav-item">
                    <a href="javascript:void(0);">
                        <img src="http://t.cn/RCzsdCq" class="layui-nav-img">
                        @ViewData["username"]
                    </a>
                    <dl class="layui-nav-child" style="text-align:center;">
                        <dd><a href="javascript:void(0);" title="基本资料">基本资料</a></dd>
                        <dd><a href="javascript:void(0);" title="安全设置">安全设置</a></dd>
                        <dd><a href="/User/Logout" title="退出">退&emsp;&emsp;出</a></dd>
                    </dl>
                </li>
          
            </ul>
        </div>
       
        <div class="layui-side zuoce">
            <div class="layui-side-scroll" >
                <!-- 左侧导航区域（可配合layui已有的垂直导航） -->
                <ul class="layui-nav layui-nav-tree" lay-filter="test" lay-shrink="all">
                    <li class="layui-nav-item layui-nav-itemed">
                        <a class="" href="javascript:;" title="基础管理">基础管理</a>
                        <dl class="layui-nav-child zuoce">
                            <dd><a href="/Dept/Organization" title="组织机构" target="menuContent" id="organ">组织机构</a></dd>
                            <dd><a href="/Menu/MenuManagement" title="菜单维护" target="menuContent" id="menu">菜单维护</a></dd>
                        </dl>
                    </li>
                    <li class="layui-nav-item layui-nav-itemed">
                        <a class="" href="javascript:;" title="人事管理">人事管理</a>
                        <dl class="layui-nav-child zuoce">
                            <dd><a href="javascript:void(0);" title="用户管理" target="menuContent" id="organ">用户管理</a></dd>
                            <dd><a href="/User/AssignRole" title="角色管理" target="menuContent" id="menu">角色管理</a></dd>
                        </dl>
                    </li>
                </ul>
            </div>
        </div>

        <div class="layui-body" >
            <iframe name="menuContent" width="100%" height="99%" frameborder="0" scrolling="auto" ></iframe>
        </div>
    </div>
 
    <script src="~/Scripts/layui.all.js"></script>
 <script>
     layui.use('element', function () {
         var element = layui.element;
     });

    
 </script>

</body>
</html>

